<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    tools:context="com.example.android.medpharm.Help">

    <ImageView
        android:id="@+id/i1"
        android:layout_width="278dp"
        android:layout_height="276dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:src="@mipmap/help" />

    <TextView
        android:id="@+id/t1"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_below="@id/i1"
        android:layout_marginBottom="20dp"
        android:textSize="15dp"
        android:fontFamily="@font/aref_ruqaa"
        android:gravity="center"
        android:text="Contact us at: "
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/t2"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/t1"
        android:layout_marginTop="-40dp"
        android:fontFamily="@font/aref_ruqaa"
        android:gravity="center"
        android:text="Phone no: 9850106065 "
        android:textSize="15dp" />

    <TextView
        android:id="@+id/t3"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/t2"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="-23dp"
        android:gravity="center"
        android:fontFamily="@font/aref_ruqaa"
        android:text="Email: medpharmhelp@gmail.com "
        android:textSize="15dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/t3"
        android:gravity="center"
        android:layout_marginLeft="15dp"
        android:fontFamily="@font/aref_ruqaa"
        android:layout_marginTop="-15dp"
        android:text="Address: D-2030 Gaur Green City, Indirapuram, New Delhi"/>


</RelativeLayout>